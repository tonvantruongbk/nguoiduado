@model RS.nguoiduadoTW.NET.Models.TBL_AD_NguoiDung
@{ Layout = "~/Views/Shared/ViewLayout.cshtml"; }

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.EditorFor(model => model.MaNguoiDung)

    <div class="childform">
        <table cellpadding="0" cellspacing="0" style="margin-top: 10px">
            <tr>
                <td style="width: 120px;">
                    @Html.LabelFor(model => model.MaVaiTro) <strong>(*)</strong>
                    @Html.ValidationMessageFor(model => model.MaVaiTro)
                </td>
                <td style="width: 10px;"></td>
                <td>

                    @{
                        Html.RenderPartial("ComboBoxVaiTro", ViewData["VaiTro"]);
                    }
                </td>
            </tr>
            <tr style="height: 8px;"></tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.HoVaTen) <strong>(*)</strong>

                </td>
                <td style="width: 10px;"></td>
                <td>
                    @Html.TextBoxFor(model => model.HoVaTen, new { @class = "text-input" })
                    @Html.ValidationMessageFor(model => model.HoVaTen)
                    <div class="span-error">@ViewBag.TenTonTai</div>
                </td>
            </tr>
            <tr style="height: 8px;"></tr>
            <tr>
                <td>
                    @*@Html.LabelFor(model => model.TenDangNhap)  <strong>(*)</strong>*@
                    Tên đăng nhập <strong>(*)</strong>
                </td>
                <td style="width: 10px;"></td>
                <td>
                    @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "text-input" })
                    @Html.ValidationMessageFor(model => model.TenDangNhap)
                </td>
            </tr>

            <tr style="height: 8px;"></tr>
            <tr>
                <td>
                    @*@Html.LabelFor(model => model.MatKhau)         <strong>(*)</strong>*@
                    Mật khẩu       <strong>(*)</strong>
                </td>
                <td style="width: 10px;"></td>
                <td>
                    @Html.TextBoxFor(model => model.MatKhau, new { @class = "text-input" })
                    @Html.ValidationMessageFor(model => model.MatKhau)
                </td>
            </tr>


            <tr style="height: 8px;"></tr>
            <tr>
                <td></td>
                <td style="width: 10px;"></td>
                <td>
                    @Html.CheckBoxFor(model => model.DaKichHoat)
                     <label>Đã kích hoạt</label>
                </td>
            </tr>

        </table>
    </div>
    
    <div class="popup-btn">
        <table>
            <tr>
                <td>
                    @Html.DevExpress().Button(
                settings =>
                {
                    settings.Name = "btnSubmitAdd";
                    settings.Text = "Cập nhật";
                    settings.UseSubmitBehavior = true;
                }
            ).GetHtml()
                </td>
                <td>
                    @Html.DevExpress().Button(
                settings =>
                {
                    settings.Name = "btnCancel";
                    settings.Text = "Thoát";
                }
            ).GetHtml()
                </td>
            </tr>
        </table>



    </div>
    <input type="hidden" id="idthongbao" name="idthongbao" value='@ViewBag.success' />
}
<script type="text/javascript">
    //Đóng form
    $('#btnCancel').click(function() {
        window.parent.eventCloseEditFromIframe();
    });

    $(document).ready(function () {
        if ($('#idthongbao').val() != '') {
            alert($('#idthongbao').val());
        }
        $('#KyHieuNganHang').focus();
    });
</script>
